<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="154dp"
            android:layout_height="32dp"
            android:text="Post Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="192dp"
            android:layout_height="31dp"
            android:text="Post Description"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintStart_toStartOf="@+id/description" />

        <ImageView
            android:id="@+id/post_Image"
            android:layout_width="301dp"
            android:layout_height="120dp"
            android:layout_marginTop="70dp"
            android:src="@android:drawable/ic_menu_add"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_section" />

        <Button
            android:id="@+id/Submit"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:text="Submit"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.786"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_Image"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/Return"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:text="Return"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.164"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_Image"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="154dp"
            android:layout_height="32dp"
            android:text="Add An Image"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/post_Image"
            app:layout_constraintStart_toStartOf="@+id/post_Image" />

        <EditText
            android:id="@+id/title"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/post_section"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />

        <EditText
            android:id="@+id/description"
            android:layout_width="316dp"
            android:layout_height="142dp"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/section"
            android:layout_width="154dp"
            android:layout_height="32dp"
            android:text="Post Section"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/post_section"
            app:layout_constraintStart_toStartOf="@+id/post_section" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>